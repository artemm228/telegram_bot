@bot.callback_query_handler(func = lambda call: True)
def callback(call):
  if call.message:
    if call.data == 'good':
     bot.send_message(call.message.chat.id, 'ĞÑ‚Ğ»Ğ¸Ñ‡Ğ½Ğ¾')
    elif call.data == 'bad':
     bot.send_message(call.message.chat.id, 'ĞŸĞµÑ‡Ğ°Ğ»ÑŒĞ½Ğ¾')

bot.polling()
